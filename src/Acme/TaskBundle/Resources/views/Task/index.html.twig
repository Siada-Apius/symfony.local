{% extends '::base.html.twig' %}

{% block body -%}
    <h1>All playlists</h1>

    <table class="records_list table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Album</th>
                <th>Year</th>
                <th>Description</th>
                <th>Category</th>
                <th>Owner</th>

            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('task_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.album }}</td>
                <td>{{ entity.year }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.category}}</td>
                <td><a href="#">{{ entity.owner }}</a></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('task_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('task_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('task_new') }}">Create a new playlist</a>
        </li>
    </ul>
{% endblock %}
