{% extends "AcmeSearchBundle::layout.html.twig" %}

{% block tutorial_body %}

<div class="tracks-title">
    <div id="left-tracks-title">
        <div style="float: left;width: 20% ;height: 134px">
            <div class="tracks-title-wrapper">
                <img id="track-left-image-screw2" src="/images/screw_2.png" width="27px" height="28px">
            </div>
        </div>


        <div style="float: right;width: 66%;height: 134px;">
            <div class="tracks-title-wrapper">
                <img id="track-radio" src="/images/radio.png" width="340px" height="52px">
            </div>
        </div>


        <div style="width:13% ;margin-left: 9%;position: absolute">
            <div class="tracks-title-wrapper">
                <div style="height: 30px; width: 145px; padding: 20px 2px;" >
                    <a href="/">Home</a>/
                    <a href="/artists">All Artists</a>/
                    <a href="/tracks">All Tracks</a>
                </div>
            </div>
        </div>

    </div>




    <div id="right-tracks-title">

        <div style="float: left;width: 60%;height: 134px;">
            <img src="/images/sound_but_left.png" width="164px" height="133px">
        </div>

        <div style="width: 32%; margin-left: 68%;height: 134px;">
            <div style="height: 50%">
                <img id="track-image-screw1" src="/images/screw_1.png" width="27px" height="28px">
            </div>

            <div style="height: 50%;">
                <div style="height: 50%"></div>

                <div style="height: 50%">
                    <img id="track-image-screw2" src="/images/screw_2.png" width="27px" height="28px">
                </div>
            </div>
        </div>

    </div>




    <div id="center-tracks-title">

        <div>

            {{ form(form) }}

        </div>

    </div>


</div>

    <div id="content">


            <div class="table">


                <div class="left-table">

                    <table class="view-table" >

                        <tr>
                            <td>Albums in this category</td>
                        </tr>



                        {% for v in discpaginator %}
                            <tr>
                                <td class="color-w"><a href="{{ path('SearchBundle_disc_view', { 'name': v.dtitle, 'id': v.did, 'artistId': v.artistsAid} ) }}">{{ v.dtitle }}</a></td>
                            </tr>
                        {% endfor %}

                    </table>


                    <div class="pagination">
                        {{ knp_pagination_render(discpaginator) }}
                    </div>

                </div>


                <div class="right-table">

                    <table class="view-table">

                        <tr>
                            <td>Artists in this category</td>
                        </tr>


                        {% for v in artistpaginator %}

                                {% for varray in v %}
                                    <tr>
                                        <td class="color-b"><a href="{{ path('SearchBundle_artist_view', { 'name':  varray.aname, 'id': varray.aid } ) }}">{{ varray.aname }}</a></td>
                                    </tr>
                                {% endfor %}

                        {% endfor %}

                    </table>

                    <div class="pagination">
                        {{ knp_pagination_render(artistpaginator) }}
                    </div>

                </div>
            </div>

    </div>

    <script type="text/javascript">

        $(document).ready(function(){

            $(".color-w:even").css("background-color", "#FFFFFF");
            $(".color-b:even").css("background-color", "#FFFFFF");

        })

    </script>

{% endblock %}
