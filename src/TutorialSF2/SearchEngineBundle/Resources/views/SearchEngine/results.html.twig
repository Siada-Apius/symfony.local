{% extends "TutorialSF2SearchEngineBundle::layout.html.twig" %}

{% block title %}{{ parent() }}{% endblock %}

{% block tutorial_body %}
    <div id="content">
        <a href="{{ path('SearchEngineBundle_search') }}" class="btn">Return</a>
        <hr />
        <ul>
            {% for film in films %}
                <li>
                    {{ film.title }} ({{ film.dateParution|date('Y') }})<br />
                </li>
            {% else %}
                <div class="alert">Sorry ^^'</div>
            {% endfor %}
        </ul>
    </div>
{% endblock %}