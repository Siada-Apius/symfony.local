                        {% endif %}

                        {% if session == true %}
                            <li><a href="{{ path ('task_new') }}">Create playlist</a></li>
                            <li><a href="{{ path ('logout') }}">Logout</a></li>
                        {% endif %}

                    </ul>
                </div>

